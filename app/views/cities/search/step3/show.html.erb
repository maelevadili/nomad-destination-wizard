<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="wizard-step3 text-center">
        <h1>Sweet!<br> You're going to <%= @country.name %></h1>

        <p>
          Now tell us...
        </p>

        <%= form_tag cities_search_step3_path, class: "form" do %>
          <div class="score-nomad">
            <%= label_tag :score_nomad, "How nomadic your city of choice should be?" %>
            <input class="slider-score slider-score-nomad" id="slider-score-nomad" name="score_nomad" data-slider-id='sliderScoreNomad' type="text" data-slider-min="<%= @country.min_score_nomad.to_i %>" data-slider-max="<%= @country.max_score_nomad.to_i %>" data-slider-step="1" data-slider-value="<%= @country.min_score_nomad.to_i %>"/>
          </div>
          <div>
            <%= submit_tag "LET'S GO!", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
